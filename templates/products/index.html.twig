{% extends 'base.html.twig' %}

{% block title %}All Products {{ parent() }}{% endblock %}

{% block body %}
    <div class="container-fluid mt-4 mb-5">
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">

                {% include "_partials/_btn_go_back.html.twig" %}

                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 justify-content-center m-3">
                
                    {% for product in products %}
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 mb-4 product-wap rounded-0 mt-2 m-auto">
                                <div class="card rounded-0">
                                   {% if product.isProductNew() %}
                                 <span class="badge bg-danger big">New</span>
                                        {% endif %}

                                  <img class="card-img rounded-0 img-fluid" src="{{ asset('assets/uploads/products/mini/a.jpg' ) }}">
                             {% extends 'base.html.twig' %}



{% block title %}Détails de
    {{ product.name }}
{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>{{ product.name }}</h1>
            </div>
            <div class="col-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        {% for iteration in 1..product.images|length %}
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{ iteration - 1 }}" {{ (loop.first ) ?'class="active" aria-current="true"' : '' }} aria-label="Slide {{ iteration }}"></button>
                        {% endfor %}
                    </div>
                    <div class="carousel-inner">
                        {% for image in product.images %}
                            <div class="carousel-item {{ (loop.first ) ? 'active' : '' }}">
                              
                                <img src="{{ asset('assets/uploads/products/mini/'~ product.image) }}" class="d-block w-100" alt="{{ product.name }}">
                          
                            </div>
                        {% endfor %}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-6">
                <p>{{ product.description }}</p>
                <p>Catégorie : {{ product.categories.name }}</p>
                <p>Prix : {{ product.price / 100 }} €</p>
                {% if product.stock > 0 %}
                    <a href="{{ path('cart_add', {id: product.id}) }}" class="btn btn-success">Ajouter au panier</a>
                {% else %}
                    <p class="text-danger">Temporairement en rupture de stock</p>
                {% endif %}
            </div>
        </section>
    </main>
{% endblock %}       <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                        <ul class="list-unstyled">
                                           <li><a class="btn btn-pink" href="#"><i class="far fa-heart"></i></a></li>

                                            <li><a class="btn btn-info text-white mt-2" href="{{ path('products_details', {'id': product.id}) }}"><i class="far fa-eye"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <a href="{{ path('products_details', {'id': product.id}) }}" class="fs-5 text-decoration-none">{{ product.name }}</a>
                                    <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                        <li>
                                            <div class="small-bold mb-1">{{ product.subcategories }}</div>
                                            {% if product.isProductNew() %}
                                                <span class="badge bg-danger big">New</span>
                                            {% endif %}
                                        </li>
                                    </ul>
                                    <ul class="list-unstyled d-flex justify-content-center mb-1">
                                        <li>
                                            <i class="text-warning fa fa-star"></i>
                                            <i class="text-warning fa fa-star"></i>
                                            <i class="text-warning fa fa-star"></i>
                                            <i class="text-muted fa fa-star"></i>
                                            <i class="text-muted fa fa-star"></i>
                                        </li>
                                    </ul>
                                    <p class="text-center mb-0">{{ product.price }}</p>
                                </div>

                                <!-- Product actions -->
                                <div class="text-center">
                                    <div class="card-footer mr-3 p-3 pt-0 border-top-0 bg-transparent">
                                        {% if product.stock > 0 %}
                                           <a class="btn btn-success btn-cart" href="{{ path('cart_add', {'id': product.id}) }}">
    Add To Cart
</a>

                                        {% else %}
                                            <p class="text text-danger">Out Of Stock</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    </div>
{% endblock %}

