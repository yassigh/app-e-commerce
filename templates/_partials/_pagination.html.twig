{% if  pages > 1 %}
    


 <nav>
    <ul class="pagination pagination-sm justify-content-center">
        
        {% if currentPage>1 %}
        <li class="page-item small ">
            <a class="page-link active rounded-0 mr-3 shadow-sm border-top-0 border-left-0 bg-info" 
            href="{{path(path,{id:id , page: currentPage - 1})}}" tabindex="-1">&lt;</a>
        </li>
        {% else %}
        <li class="page-item small disabled">
            <a class="page-link active rounded-0 mr-3 shadow-sm border-top-0 border-left-0" 
             tabindex="-1">&lt;</a>
        </li>
        {% endif %}
        
        {% for page in 1 .. pages %}
            
        
            <li class="page-item {{ (page == currentPage) ? 'active' : '' }}">
                <a class="page-link rounded-0 mr-3 shadow-sm border-top-0 border-left-0 {{ (page != currentPage) ? 'bg-light text-dark' : 'bg-info text-light' }} " 
                href="{{ path(path, {id: id, page: page}) }}" tabindex="-1">{{ page }}</a>
            </li>

        {% endfor %}
       {% if currentPage < pages %}

            <li class="page-item">     
                <a class="page-link active rounded-0 mr-3 shadow-sm border-top-0 border-left-0 bg-info" 
                href="{{path(path,{id:id , page: currentPage + 1})}}" tabindex="-1">&gt;</a>
            </li>
        {% else %}

            <li class="page-item disabled">
                <a class="page-link active rounded-0 mr-3 shadow-sm border-top-0 border-left-0 " 
                 tabindex="-1">&gt;</a>
            </li>

         {% endif %}
    </ul>
</nav>
{% endif %}
               