{% block body %}

    <div class="container px-4 px-lg-5 mt-5">
     {% include "_partials/_btn_go_back.html.twig" %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 justify-content-center">

            {% for category in categories%}
                <div class="col mb-4">
                    <div class="card h-100">
                        <!-- Category image -->
                     
                                <img src="{{ asset('assets/uploads/products/mini/'~ category.imagee) }}" class="d-block w-100" alt="{{ category.name }}">
                          
                        <!-- Category details -->
                        <div class="card-body p-3">
                            <div class="text-center">
                                <!-- Category name -->
                                <div class="text" style="font-weight: bold; font-size: 18px;">{{ category.name }}</div>
                                <!-- Add the category name or details here -->
                            </div>
                        </div>
                        <!-- Category actions -->
                        <div class="card-footer p-3 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
    <a class="btn btn-outline-dark btn-sm mt-auto" href="{{ path('sub_categories_child', {'id': category.id}) }}">Explore</a>
</div>

                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>




