{% extends 'base.html.twig' %}

{% block title %}
    SubCategories
{% endblock %}

{% block body %}
    
             {% include "_partials/_btn_go_back.html.twig" %}

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 justify-content-center">
                {% for category in categories %}
                    <div class="col mb-4">
                        <div class="card h-100">
         <!-- Category image -->
                            <!-- Adjust as needed -->
                            <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                            <!-- Category details -->
                            <div class="card-body p-3">
                                <div class="text-center">
                                    <!-- Category name -->
                                    <div class="text" style="font-weight: bold; font-size: 18px;">{{ category.getName() }}</div>
                                    <!-- Add additional details here -->
                                    <ul class="list-group list-group-flush">
                                        <!-- Add more details here if needed -->
                                    </ul>
                                </div>
                            </div>
                            <!-- Category actions -->
                            <div class="card-footer p-3 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <!-- Adjust the route based on the existence of child categories -->
                                    <a class="btn btn-outline-dark btn-sm mt-auto" href="{{ path('sub_categories_child', {'id': sub_cat.getId() }) }}">Explore</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                {% endfor %}
            </div>
       
{% endblock %}
{% block footer %}
    
{% endblock %}
