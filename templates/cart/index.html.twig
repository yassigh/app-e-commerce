{% extends 'base.html.twig' %}

{% block body %}
    <section class="my-5">
        <div class="container mt-2">
            {% include "_partials/_btn_go_back.html.twig" %}
            <h1 class="text-center my-4">Your Cart</h1>

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <table class="table table-striped table-bordered">
                        <thead class="bg-success text-light">
                            <tr>
                                <th scope="col" >Product</th>
                                <th scope="col">Shop</th>
                                <th scope="col">Price</th>
                                <th scope="col" colspan="3">Quantity</th>
                                <th scope="col">Total</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for element in data %}
                                <tr>
                                    <td class="text-sm">{{ element.product.name }}</td>
                                    <td>{{ element.product.shop.name }}</td>
                                    <td class="text-sm">{{ element.product.price/100 }} DTN</td>
                                    <td colspan="3" class="text-center">
                                        <div class="input-group row-cols-3">
                                            <a href="{{ path('cart_remove', {'id': element.product.id}) }}" class="btn btn-warning">-</a>
                                            <span class="input-group-text text-black">{{ element.quantity }}</span>
                                            <a href="{{ path('cart_add', {'id': element.product.id}) }}" class="btn btn-success">+</a>
                                        </div>
                                    </td>
                                    <td>{{ element.quantity * element.product.price/100 }} DTN</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('cart_delete', {'id': element.product.id}) }}" class="btn btn-danger btn-sm">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8" class="text-center">Your cart is empty :/</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6" class="text-end fw-bold">Total</td>
                                <td>{{ total }} DTN</td>
                                <td class="text-center">
                                  
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="row">
                    <div class="text-center ">
                      <a href="{{ path('cart_empty') }}" class="btn btn-danger btn-lg">Empty Cart</a>
                     
                    
                        <a href="{{ path('orders_add') }}" class="btn btn-info btn-lg">Confirm</a>
                    </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
